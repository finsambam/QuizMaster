<%= render :partial => 'shared/error_messages', :locals => {:obj => @quiz} %>

<div class="header-content">
  <h2 class="page-header">Take a Quiz</h2>
</div>
<%= form_for(@quiz, url: {action: "create"}, html: {class: "form-horizontal"}) do |f| %>
  <div class="form-group required">
    <%= f.label :email,"Email" , class: "col-sm-3 control-label" %>
    <div class="col-sm-5">
      <%= f.email_field :email, class: 'form-control', placeholder: "Your email", autofocus: true %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-5">
      <%= f.submit "Next", class: "btn btn-primary" %>
      <%= link_to "Cancel", root_path, class: "btn btn-default" %>
    </div>
  </div>
<% end %>