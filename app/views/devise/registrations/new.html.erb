<div class="panel panel-default">
  <div class="panel-heading">
    <h2 class="panel-title">Sign up</h2>
  </div>
  <div class="panel-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-horizontal"}) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label :name, class: "col-sm-3 control-label" %>
        <div class="col-sm-5">
          <%= f.text_field :name, class: 'form-control', placeholder: "Your Full Name", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :email, class: "col-sm-3 control-label" %>
        <div class="col-sm-5">
          <%= f.email_field :email, class: 'form-control', placeholder: "Your Email" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password, class: "col-sm-3 control-label" %>
        <div class="col-sm-5">
          <%= f.password_field :password, class: 'form-control', autocomplete: "off" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, class: "col-sm-3 control-label" %>
        <div class="col-sm-5">
          <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "off" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-5">
          <%= f.submit "Sign up", class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
